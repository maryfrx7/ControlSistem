<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" stylesheets="@../estilos/productos.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.ProductosController">
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="306.0">
            <children>
                <TextField fx:id="txtNombre" layoutX="43.0" layoutY="116.0" onAction="#registrarProducto" prefHeight="30.0" prefWidth="220.0" promptText="Nombre producto" styleClass="textfield" stylesheets="@../estilos/productos.css" />
                <TextField fx:id="txtStock" layoutX="43.0" layoutY="164.0" onAction="#registrarProducto" prefHeight="30.0" prefWidth="220.0" promptText="Stock" styleClass="textfield" stylesheets="@../estilos/productos.css" />
                <TextField fx:id="txtPrecio" layoutX="43.0" layoutY="212.0" onAction="#registrarProducto" prefHeight="30.0" prefWidth="220.0" promptText="Precio" styleClass="textfield" stylesheets="@../estilos/productos.css" />
                <TextField fx:id="txtId" layoutX="43.0" layoutY="69.0" onAction="#registrarProducto" prefHeight="30.0" prefWidth="220.0" promptText="Id" styleClass="textfield" stylesheets="@../estilos/productos.css" />
                <ComboBox fx:id="Categoría" layoutX="43.0" layoutY="259.0" prefHeight="30.0" prefWidth="220.0" promptText="Categoría" styleClass="textfield" stylesheets="@../estilos/productos.css" />
                <Button fx:id="btnRegistrarProducto" layoutX="49.0" layoutY="319.0" mnemonicParsing="false" onAction="#registrarProducto" styleClass="btn-registrarproducto" stylesheets="@../estilos/productos.css" text="Guardar" />
                <Button fx:id="btnModificar" layoutX="180.0" layoutY="319.0" mnemonicParsing="false" onAction="#modificarProducto" styleClass="btn-registrarproducto" stylesheets="@../estilos/productos.css" text="Modificar" />
            </children>
        </AnchorPane>
        <AnchorPane prefHeight="46.0" prefWidth="600.0" styleClass="barra-superior" stylesheets="@../estilos/productos.css">
            <children>
                <Button fx:id="close" layoutX="531.0" layoutY="7.0" mnemonicParsing="false" onAction="#close" prefHeight="24.0" prefWidth="58.0" styleClass="close" stylesheets="@../estilos/productos.css">
                    <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="CLOSE" size="1.2em" />
                    </graphic>
                </Button>
                <Button fx:id="btnRegresar" layoutY="3.0" mnemonicParsing="false" onAction="#regresar" prefHeight="40.0" prefWidth="78.0" styleClass="btn-regresar" stylesheets="@../estilos/productos.css" text="Regresar" textFill="#d601fc" />
            </children>
        </AnchorPane>
        <Button fx:id="btnBuscar" layoutX="314.0" layoutY="319.0" mnemonicParsing="false" onAction="#buscarProducto" styleClass="btn-registrarproducto" stylesheets="@../estilos/productos.css" text="Buscar" />
        <Button fx:id="btnEliminar" layoutX="461.0" layoutY="319.0" mnemonicParsing="false" onAction="#eliminarProducto" styleClass="btn-registrarproducto" stylesheets="@../estilos/productos.css" text="Eliminar" />
        <AnchorPane fx:id="anchorderecho" layoutX="329.0" layoutY="60.0" prefHeight="237.0" prefWidth="237.0" styleClass="left-form" stylesheets="@../estilos/loginDesign.css" />
    </children>
</AnchorPane>
